cabal-version:       2.2
name:                nrs-parser
version:             0.1.0.0
synopsis:            Scraper and parser for the Nevada Revised Statutes
description:         Please see README.md
homepage:            https://github.com/public-law/nevada-revised-statutes-parser#readme
author:              Robb Shecter
maintainer:          robb@public.law
copyright:           All rights reserved
category:            Web
build-type:          Simple
extra-source-files:  README.md

common deps
  build-depends:
    base               >= 4.7 && < 5

test-suite nrs-parser-test
  import:              deps
  type:                exitcode-stdio-1.0
  hs-source-dirs:      src, test
  main-is:             Spec.hs
  default-extensions:  NoImplicitPrelude, UnicodeSyntax, DuplicateRecordFields
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall
  default-language:    Haskell2010
  build-depends:       aeson
                     , aeson-pretty
                     , attoparsec
                     , base-unicode-symbols
                     , basic-prelude
                     , bytestring
                     , directory
                     , filepath
                     , hspec
                     , parsers
                     , process
                     , split
                     , string-conversions
                     , tagsoup
                     , text
                     , time
                     , unordered-containers
  other-modules:       ChapterFileSpec
                     , IndexFileSpec
                     , TextUtilSpec
                     , IndexFile
                     , ChapterFile
                     , Config
                     , FileUtil
                     , HtmlUtil
                     , Models.Chapter
                     , Models.NRS
                     , Models.Section
                     , Models.SubChapter
                     , Models.SubSubChapter
                     , Models.Title
                     , Models.Tree
                     , NRSParser
                     , TextUtil
                     , TreeParser
                     , Year



executable nrs-parser-exe
  import:              deps
  hs-source-dirs:      src, app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude, UnicodeSyntax, DuplicateRecordFields
  build-depends:       aeson
                     , aeson-pretty
                     , attoparsec
                     , base-unicode-symbols
                     , basic-prelude
                     , bytestring
                     , directory
                     , filepath
                     , hspec
                     , parsers
                     , process
                     , split
                     , string-conversions
                     , tagsoup
                     , text
                     , time
                     , unordered-containers
  other-modules:       IndexFile
                     , ChapterFile
                     , Config
                     , FileUtil
                     , HtmlUtil
                     , Models.Chapter
                     , Models.NRS
                     , Models.Section
                     , Models.SubChapter
                     , Models.SubSubChapter
                     , Models.Title
                     , Models.Tree
                     , NRSParser
                     , TextUtil
                     , TreeParser
                     , Year



source-repository head
  type:     git
  location: https://github.com/public-law/nevada-revised-statutes-parser

